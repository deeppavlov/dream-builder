{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "Task.json",
  "title": "Task",
  "type": "object",
  "required": ["resid", "type", "content"],
  "properties": {
    "resid": {
      "type": "string"
    },

    "type": {
      "type": "string",
      "const": "task"
    },

    "content": {
      "type": "object",
      "required": ["component", "inputs"],
      "properties": {
        "component": {
          "type": "string"
        },
        "task": {
          "type": "string"
        },

        "deploygroup": {
          "type": "string"
        },

        "inputs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
